<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Pet Name: <input type="text" name="pet[name]" id="pet_name"><%= @pet.name %></label><br>

  <p>Pick one owner for the pet:</p>
  <% @owners.each do |owner|%>
  <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner==owner %> ><%= owner.name%></input>
  <br>
  <% end %>


  <p>Or create a owner for it:</p>
  <input type="text" name="owner[name]" id="owner_name">
  <br>


  <input type="submit" value="Update Pet">
</form>
